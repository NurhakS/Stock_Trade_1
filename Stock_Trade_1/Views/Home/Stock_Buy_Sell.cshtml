@model Stock_Trade_1.Models.Transaction
@using Stock_Trade_1.Models
@using Stock_Trade_1.Controllers
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";

}

    <section class="section" id="service">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-lg-7 pl-4 text-center">
                    <div class="service-heading">
                        <h1>Don't work for money, but let money work for you</h1>
                    </div>
                </div>
            </div>

            <div class="panel-body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Stock Name</th>
                            <th>Company Name</th>
                            <th>Current Price	</th>
                            <th>High Price</th>
                            <th>Low Price	</th>

                        </tr>
                    </thead>
                   
                    <tbody>
                        <tr>
                            @foreach (var item in ViewBag.Stocks as IEnumerable<Stock>)
                            {

                            <tr>
                                <td> @Html.DisplayFor(modelItem => item.Stock_name)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company_name)
                                </td>
                                <td> @Html.DisplayFor(modelItem => item.Stock_Value.Stock_price)$</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Stock_Value.Stock_high_price)$
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Stock_Value.Stock_low_price)$
                                </td>

                            </tr>
                        }




                            @using (Html.BeginForm())

                            {
                            <td>
                                @Html.EditorFor(model => model.Stock_quantity, new { htmlAttributes = new { @class = "form-control" } })



                            </td>
                            <td>
                                    <button type="submit" class="stock-buy" value="Stock_Buy_Sell">
                                        <h2 style="color:white;">
                                            BUY
                                        </h2>
                                    </button>
                               

                            </td>


                            }
                     









                            </tbody>

                        </table>



                    <!-- Closes box2 -->

                </div>


        </section>



